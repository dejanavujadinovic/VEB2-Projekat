@{
}

@{ NovaPorudzbina np = new NovaPorudzbina();}
@{ float i = 0; float ukupno = 0;}

<head>
    <style>
        .mojdiv {
            width: initial;
            height: initial;
            background-color: lightpink;
            display: inline-block;
            position: relative;
            border: 5px solid gold;
        }

        body {
            background-color: gray;
        }

        p {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }

        a {
            color: black;
        }
    </style>
</head>
<body>
    <center>
        <div class="mojdiv">
            <form action="/Potrosac/Poruci">
                <table border="1">
                    <tr>
                        <th>Naziv</th>
                        <th>Kolicina</th>
                        <th>Cena</th>
                    </tr>
                    @foreach (ProizvodKolicina item in Model)
                    {
                        i = item.Proizvod.Cena * item.Kolicina;
                        <tr>
                            <td>@item.Proizvod.Ime</td>
                            <td>@item.Kolicina</td>
                            <td>@i</td>
                        </tr>

                        ukupno = i + ukupno;
                    }
                    <tr>
                        <th colspan="2">Dostava</th>
                        <td>390</td>
                    </tr>
                    <tr>
                        @{ukupno = ukupno + 390;}
                        <th colspan="2">Ukupno</th>
                        <td>@ukupno</td>
                    </tr>
                    <tr>
                        <th>Adresa</th>
                        <td>
                            <input type="text" name="adresa" />
                        </td>
                    </tr>
                    <tr>
                        <th>Komentar</th>
                        <td>
                            <input type="text" name="komentar" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <input type="number" name="ukupno" value="@ukupno" hidden />
                            <input type="submit" value="Poruci" />
                        </td>
                    </tr>
                </table>
            </form>
            <a href="~/Potrosac/NovaPorudzbina">Nazad</a>
        </div>
    </center>
</body>