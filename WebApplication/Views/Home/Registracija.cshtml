<head>
    <style>
        .mojdiv {
            width: initial;
            height: initial;
            background-color: white;
            display: inline-block;
            position: relative;
            border: 5px solid gold;
        }

        body {
            font-family: sans-serif;
            background-image: url('/logo.png');
        }

        p {
            /*position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);*/
        }

        a {
            color: black;
        }

        
    </style>
</head>
<body>
    <center>
        <div class="mojdiv">
            <h2>Registracija</h2>
            <p style="color:red;">@ViewBag.Error</p>
            <form action="/Home/Registracija" accept-charset="UTF-8" method="post">
                <table>
                    <thead>
                        <tr>
                            <td>
                                Korisnicko ime
                                <br />
                                <input type="text" name="korisnickoIme" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Email
                                <br />
                                <input type="text" name="email" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Lozinka
                                <br />
                                <input type="password" name="lozinka" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Ponovite lozinku
                                <br />
                                <input type="password" name="lozinka2" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Ime i prezime
                                <br />
                                <input type="text" name="imePrezime" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Datum rodjenja
                                <br />
                                <input type="date" name="datumRodjenja" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Adresa
                                <br />
                                <input type="text" name="adresa" required/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Tip korisnika
                                <br />
                                <select name="tip">
                                    <option>Administrator</option>
                                    <option>Dostavljac</option>
                                    <option>Potrosac</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Slika
                                <br />
                                <input name="Slika" type="file" required/>
                            </td>
                        </tr>
                        <tr>
                            <td align="center" colspan="2">
                                <input type="submit" placeholder="Photo" value="Posalji" />
                            </td>
                        </tr>
                    </thead>
                </table>
            </form>
        </div>
    </center>
</body>